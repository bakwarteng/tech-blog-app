<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{user.username}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Blog Post:</h3>

    <form class="form new-blog-form">
      <div class="form-group">
        <label for="blog-title">blog name:</label>
        <input
          class="form-input"
          type="text"
          id="blog-title"
          name="blog-title"
          {{blog_title.length}}
        />
      </div>
      {{! <div class="form-group">
        <label for="project-funding">needed funding ($):</label>
        <input class="form-input" type="number" id="project-funding" name="project-funding" />
      </div> }}
      <div class="form-group">
        <label for="blog-content">blog-content:</label>
        <textarea
          class="form-input"
          id="blog-content"
          name="blog-content"
          {{blog_content.length}}
        ></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  <div class="col-md-6 project-list">
    <h3>Current Blogs:</h3>

    {{#each blogs as |blog|}}
      <div class="row mb-2">
        <div class="col-md-8">
          <h4><a href="/blogs/{{blog.id}}">{{blog.blog_title}}</a></h4>
        </div>
        <div class="col-md-4">
          <button
            class="btn btn-sm btn-danger"
            data-id="{{blog.id}}"
          >DELETE</button>
        </div>
      </div>
    {{/each}}
  </div>
</div>

<script src="/js/blogProfile.js"></script>
<script src="/js/logout.js"></script>