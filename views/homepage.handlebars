<!-- Loop over each object in the projects array -->
{{#each blogs as |blog|}}
  <div class="row mb-4 blog">
    <div class="col-md-5">
      <h2>
        <!-- Call helper function with triple brackets to render the emoji span as HTML -->
        {{{get_emoji}}}
        <a href="/blogs/{{blog.id}}">{{blog.blog_title}}</a>
      </h2>
      <p>
        <!-- Pass needed_funding value to the helper function -->

      </p>
      <p>Created by {{username}} on {{format_date blog.date_created}}</p>
    </div>
    <div class="col-md-7">
      <p>
        {{blog.blog_content}}
      </p>
    </div>
  </div>
{{/each}}